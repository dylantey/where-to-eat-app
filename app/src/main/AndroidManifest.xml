<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.umn.where_to_eat_app" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/burger"
        android:logo="@mipmap/burger"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".main_screen.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".starting_screen.TitleScreen"
            android:label="where-to-eat-app"
            android:theme="@style/AppThemeNoBar">
        </activity>
        <activity
            android:name=".starting_screen.LoginScreen"
            android:label="where-to-eat-app"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".starting_screen.RegisterScreen"
            android:label="where-to-eat-app"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".JoinARoomLoggedIn"
            android:label="where-to-eat-app"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".voting_screens.VotingResults"
            android:label="where-to-eat-app"
            android:theme="@style/AppThemeNoBar">
        </activity>
        <activity
            android:name=".JoinAFriendsRoom"
            android:label="where-to-eat-app"
            android:theme="@style/AppTheme">
        </activity>
		<activity
            android:name=".variable_pages.RestaurantActivity"
            android:label="where-to-eat-app"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".voting_screens.RestaurantFiltering"
            android:label="where-to-eat-app"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".voting_screens.InformationPage"
            android:label="where-to-eat-app"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".variable_pages.UserActivity"
            android:label="where-to-eat-app"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".voting_screens.VotingScreen"
            android:label="where-to-eat-app"
            android:theme="@style/AppTheme">
        </activity>
    </application>

</manifest>